{
    "editor.rulers": [
        80,
        120
    ],
    "editor.detectIndentation": false,
    "files.insertFinalNewline": true,
    "files.associations": {
        "Makefile.*": "makefile",
        "*.mk": "makefile",
        "ipsec.h": "c",
        "pkt.h": "c",
        "frag.h": "c",
        "sixlowpan.h": "c",
        "sched.h": "c",
        "hdr.h": "c",
        "esp.h": "c"
    },
    "[shellscript][c][cpp]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
    },
    "[makefile]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
    },
    "C_Cpp.default.defines": ["MODULE_GNRC_IPV6_IPSEC"]
}
